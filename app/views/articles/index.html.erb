<%= link_to "New Article",  new_article_path, :class => 'btn' %>
<span class="header_article">Manage Information</span>
<table class="table">
  <th>Name</th>
  <th>Published</th>
  <th>Author</th>
  <th>Description</th>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.name %></td>
      <td><%= article.published %></td>
      <td><%= article.author %></td>
      <td><%= article.description %></td>
      <!-- does not display button for unauthorize user -->
      <%# if can? :update, article %>
      <td><%= link_to "Edit", edit_article_path(article.id),:class => 'btn' %></td>
      <%# end %>
    <td><%= link_to "Delete", article_path(article.id), method: :delete, :class => 'btn' %></td>
      <td> <%= link_to "Show", article_path(article.id), :class => 'btn'  %></td>
      <td></td>
    </tr> 
  <% end %>